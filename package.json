{
  "name": "hive-mind",
  "version": "1.0.0",
  "description": "This is a game written in JavaScript. It is built around the immense strategic challenges that bees go through every day in order to create a stable hive environment. Hopefully it will educate players on the amazing life of bees, and also gives significant strategic challenge and satisfaction.",
  "main": "index.js",
  "scripts": {
    "start": "serve ./src",
    "test": "jest",
    "build": "browserify src/app/main.js -o src/static/bundle.js",
    "watch": "watchify src/app/main.js -o src/static/bundle.js --debug --verbose"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gcantieni/hive-mind.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gcantieni/hive-mind/issues"
  },
  "homepage": "https://github.com/gcantieni/hive-mind#readme",
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "immutable": "^4.0.0-rc.12",
    "ramda": "^0.25.0",
    "rxjs": "^5.5.2",
    "serve": "^9.1.0"
  },
  "devDependencies": {
    "babel-jest": "^23.4.0",
    "jest": "^23.4.1"
  }
}
